{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "nuxt prepare",
    "prepare": "husky",
    "dev": "nuxt dev --host",
    "build": "nuxt build",
    "generate": "nuxt generate",
    "preview": "nuxt preview --host",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:check": "prettier --check .",
    "format:write": "prettier --write ./",
    "deps:check": "ncu --interactive"
  },
  "dependencies": {
    "vue": "^3.4.29",
    "vue-router": "^4.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@nuxt/eslint": "^0.3.13",
    "eslint": "^8.57.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "npm-check-updates": "^16.14.20",
    "nuxt": "^3.12.2",
    "prettier": "^3.3.2"
  },
  "lint-staged": {
    "**/*.{.js,ts,vue,tsx}": [
      "npm run lint:fix"
    ],
    "*.json": [
      "npm run format:write"
    ],
    "*.md": [
      "npm run format:write"
    ]
  }
}
